<style>
  body {
    background-image: url("{{asset 'line.svg'}}");
    background-position: top center;
    background-repeat: repeat-x;
    background-size: auto;
  }
</style>

<h1 class="visibility-hidden">{{ help_center.name }}</h1>

<div class="container home-page">
  <section class="intro">
    <h2 class="intro__title">Learn and level up <br> your skills</h2>
    <p class="intro__text">Welcome to the GanttPRO Help Center</p>
    <section id="main-content" class="section hero intro__search">
      <div class="hero-inner intro__search-inner">
        <h3 class="visibility-hidden">{{ t 'search' }}</h3>

        {{search submit=true instant=settings.instant_search class='search search-full'}}
      </div>
    </section>
  </section>

  <section class="section knowledge-base">
    <h2 class="visibility-hidden">{{ t 'categories' }}</h2>
    <section class="categories blocks">
      <ul class="blocks-list">
        {{#each categories}}
        {{#if ../has_multiple_categories}}
        <li class="blocks-item">
          <a href='{{url}}' class="blocks-item-link">
            {{#is id 360003619497 }}
            <span class="blocks-img"
              style="background-image: url( {{ asset 'icon-rocket.svg' }}); background-size: 38px"
              aria-hidden="true"></span>
            {{/is}}

            {{#is id 5250879378961 }}
            <span class="blocks-img" style="background-image: url( {{ asset 'icon-views.svg' }}); background-size: 37px"
              aria-hidden="true"></span>
            {{/is}}

            {{#is id 360003692657 }}
            <span class="blocks-img"
              style="background-image: url( {{ asset 'icon-document.svg' }}); background-size: 30px"
              aria-hidden="true"></span>
            {{/is}}

            {{#is id 360003735297 }}
            <span class="blocks-img" style="background-image: url( {{ asset 'icon-team.svg' }}); background-size: 38px"
              aria-hidden="true"></span>
            {{/is}}

            {{#is id 5250907485969 }}
            <span class="blocks-img"
              style="background-image: url( {{ asset 'icon-management.svg' }}); background-size: 36px"
              aria-hidden="true"></span>
            {{/is}}

            {{#is id 4406279640337 }}
            <span class="blocks-img"
              style="background-image: url( {{ asset 'icon-import.svg' }}); background-size: 36px"
              aria-hidden="true"></span>
            {{/is}}

            {{#is id 360003692717 }}
            <span class="blocks-img" style="background-image: url( {{ asset 'icon-api.svg' }}); background-size: 44px"
              aria-hidden="true"></span>
            {{/is}}

            {{#is id 5250956662033 }}
            <span class="blocks-img"
              style="background-image: url( {{ asset 'icon-mobile.svg' }}); background-size: 28px"
              aria-hidden="true"></span>
            {{/is}}

            {{#is id 360003625478 }}
            <span class="blocks-img"
              style="background-image: url( {{ asset 'icon-security.svg' }}); background-size: 34px"
              aria-hidden="true"></span>
            {{/is}}

            {{#is id 360003692677 }}
            <span class="blocks-img"
              style="background-image: url( {{ asset 'icon-wallet.svg' }}); background-size: 30px"
              aria-hidden="true"></span>
            {{/is}}


            <h3 class="blocks-item-title">{{name}}</h3>
            <p class="blocks-item-description">{{excerpt description}}</p>
          </a>
        </li>
        {{else}}
        {{#each sections}}
        <li class="blocks-item">
          <a href='{{url}}' class="blocks-item-link">
            <div class="blocks-img">
              <img src="#" loading="lazy" alt="">
            </div>

            <h3 class="blocks-item-title">{{name}}</h3>
            <p class="blocks-item-description">{{excerpt description}}</p>
          </a>
        </li>
        {{/each}}
        {{/if}}
        {{/each}}
      </ul>
      {{pagination}}
    </section>

